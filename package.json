{
  "name": "calendar-for-daily-notes",
  "version": "2.1.3",
  "description": "Calendar for daily notes with grouped lists, created-on-day notes and attachments, color tags, custom titles, and optional gemma3 title generation.",
  "author": "xRyul",
  "main": "main.js",
  "license": "MIT",
  "scripts": {
    "lint": "svelte-check && eslint src --ext .ts",
    "build": "npm run lint && rollup -c rollup.config.mjs",
    "postbuild": "node scripts/deploy-to-vault.js",
    "pre-release": "node scripts/prepare-release.js",
    "test": "jest --passWithNoTests",
    "test:watch": "npm run test -- -- --watch"
  },
  "dependencies": {
    "obsidian": "obsidianmd/obsidian-api#master",
    "obsidian-calendar-ui": "0.3.12",
    "obsidian-daily-notes-interface": "0.9.0",
    "svelte": "5.46.1",
    "tslib": "2.1.0"
  },
  "devDependencies": {
    "@eslint/json": "0.14.0",
    "@rollup/plugin-commonjs": "29.0.0",
    "@rollup/plugin-node-resolve": "16.0.3",
    "@rollup/plugin-typescript": "12.3.0",
    "@tsconfig/svelte": "5.0.6",
    "@types/jest": "30.0.0",
    "@typescript-eslint/eslint-plugin": "8.51.0",
    "@typescript-eslint/parser": "8.51.0",
    "eslint": "9.39.2",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-obsidianmd": "0.1.9",
    "jest": "30.2.0",
    "moment": "2.29.4",
    "rollup": "4.54.0",
    "rollup-plugin-svelte": "7.2.3",
    "svelte-check": "4.3.5",
    "svelte-jester": "5.0.0",
    "svelte-preprocess": "6.0.3",
    "ts-jest": "29.4.6",
    "typescript": "5.9.3",
    "typescript-eslint": "8.51.0"
  },
  "overrides": {
    "svelte-check": {
      "source-map": "0.7.6"
    },
    "v8-to-istanbul": {
      "source-map": "0.7.6"
    }
  },
  "jest": {
    "moduleNameMapper": {
      "src/(.*)": "<rootDir>/src/$1"
    },
    "transform": {
      "^.+\\.svelte$": [
        "svelte-jester",
        {
          "preprocess": true
        }
      ],
      "^.+\\.ts$": [
        "ts-jest",
        {
          "tsconfig": {
            "module": "commonjs",
            "moduleResolution": "node",
            "verbatimModuleSyntax": false
          }
        }
      ]
    },
    "moduleFileExtensions": [
      "js",
      "ts",
      "svelte"
    ]
  }
}
